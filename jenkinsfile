pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                sshagent(credentials: ['Git-id']) {
                    git 'git@github.com:heenagehlot/my-app.git'
                }
            }
        }
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t my-app .'
            }
        }
        stage('Deploy') {
            steps {
                sh 'sh scripts/deploy.sh'
            }
        }
    }
}


